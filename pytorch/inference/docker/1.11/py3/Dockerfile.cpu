ARG PYTHON=python3
ARG PYTHON_VERSION=3.8.13
ARG MAMBA_VERSION=4.12.0-2

# PyTorch Binaries
ARG PT_INFERENCE_URL=https://aws-pytorch-unified-cicd-binaries.s3.us-west-2.amazonaws.com/r1.11.0_ec2/20221206-192811/6ead7f1c1f99d7cc5d15574e6698a855ddd7c823/torch-1.11.0%2Bcpu-cp38-cp38-linux_x86_64.whl
ARG PT_TORCHVISION_URL=https://download.pytorch.org/whl/cpu/torchvision-0.12.0%2Bcpu-cp38-cp38-linux_x86_64.whl
ARG PT_TORCHAUDIO_URL=https://download.pytorch.org/whl/cpu/torchaudio-0.11.0%2Bcpu-cp38-cp38-linux_x86_64.whl

